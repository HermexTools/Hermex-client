<Window x:Class="Hermex.Windows.UploadsPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hermex.Windows"
        mc:Ignorable="d"
        Title="Uploads" Height="70" Width="230" ResizeMode="CanMinimize" SourceInitialized="UploadPanel_SourceInitialized" Topmost="True" WindowStyle="None">
    <Grid x:Name="uploadPanel">
        <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Top">
            <TextBlock x:Name="label" Text="Label" VerticalAlignment="Top" Margin="0,0,0,5"/>
            <ProgressBar Height="25" VerticalAlignment="Top" RenderTransformOrigin="0.511,-0.751"/>
        </StackPanel>
    </Grid>
</Window>
